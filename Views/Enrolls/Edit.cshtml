                <span asp-validation-for="OriginMsg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HasSend" /> @Html.DisplayNameFor(model => model.HasSend)
                    </label>
