
@model SGS.CRS.UI.Utility.PagerResult<YHSchool.Models.Enroll>
@{
    ViewData["Title"] = "Index";
}

<h3>报名消息  </h3>
<hr />
@*<p>
        <a asp-action="Create">新增</a>
    </p>*@

<div class="col-sm-10">
    <form method="get" >
            <input name="SearchFilters" class="col-sm-4" id="Comments" />
           &nbsp; <input type="submit" value="Query" class="btn btn-primary" />
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                FormCode
            </th>
            <th>
                Message
            </th>
            @*<th>
                Origin Msg
            </th>*@
            <th>
                CreateDate
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.HasSend)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Creator)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DataList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FormCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                @*<td class="col-sm-4">
                    @Html.DisplayFor(modelItem => item.OriginMsg)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.HasSend)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Creator)
                    </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.Raw(Model.PagerHtml()) Total: @Model.Total
</div>
