@model SGS.CRS.UI.Utility.PagerResult<YHSchool.Models.EventLog>

@{
    ViewData["Title"] = "Index";
}

<h3>日志</h3>
<hr />
<div>
    <form method="get">Comments:
        <input name="Comments" id="Comments" />
        <input type="submit" value="Query" />
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.EnrollID)
                </th>*@
            <th>
                Action Type
            </th>
            @*<th>
                Log Level
            </th>*@
            <th>
                Comments
            </th>
            <th>
                Create Date
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Creator)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DataList)
        {
        <tr>
            @*<td>
            @Html.DisplayFor(modelItem => item.EnrollID)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.ActionType)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.LogLevel)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>


            @*<td>
            @Html.DisplayFor(modelItem => item.Creator)
        </td>*@
            <td>
                <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                @*<a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>*@
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
        @Html.Raw(Model.PagerHtml()) Total: @Model.Total
</div>
